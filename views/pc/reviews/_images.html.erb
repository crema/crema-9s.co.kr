<% ul_class = 'images' unless local_assigns.key?(:ul_class) %>
<% if review.images_count > 0 %>
  <%= content_tag :ul, class: ul_class do %>
    <% (1..review.images_count).each do |i| %>
      <%= render 'reviews/image_thumbnail', i: i, li_class: local_assigns[:li_class], review: review %>
    <% end %>
  <% end %>
<% else %>
  <%= content_tag :div, nil, class: ul_class %>
<% end %>
